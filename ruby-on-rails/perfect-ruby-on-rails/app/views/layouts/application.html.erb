<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html" charset="utf-8" http-equiv="content-type">
    <title>イベント管理アプリ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>

  <body>
    <header class="header navbar navbar-expand-sm navbar-light bg-light">
      <div class="container">
        <%= link_to 'イベント一覧', root_path, class: 'navbar-brand mr-auto' %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to '新規イベント登録', new_event_path, class: 'nav-link' %>
          </li>
          <% if logged_in? %>
            <li class="nav-item">
                <%= link_to '退会', new_retirements_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
                <%= link_to 'ログアウト', logout_path, class: 'nav-link', method: :delete %>
            </li>
          <% else %>
              <li class="nav-item">
                <%= link_to 'GitHubでログイン', '/auth/github', class: 'nav-link', method: :post %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="container mb-3">
      <% if flash.notice %>
        <div class="alert alert-success">
          <%= flash.notice %>
        </div>
      <% end %>
      <% if flash.alert %>
        <div class="alert alert-danger">
          <%= flash.alert %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

<script>
  ((t, a, y, o, r, i) => {
    r = a.createElement(y);
    i = a.getElementsByTagName(y)[0];
    r.type='text/javascript';
    r.async=1
    r.src='//tayori.com/form/674fa5dd88e1fbb0cfe04ae1abdffd85be188f7c/tag.js';
    r.id='tayori-tag';
    i.parentNode.insertBefore(r,i);
  })(window,document,'script');
</script>
