<%= form_with(model: event, class: 'form-horizontal') do |f| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% event.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', row: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :place %>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start_at %>
    <div>
      <%= f.datetime_select :start_at, start_year: now.year, end_year: now.year + 1 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_at %>
    <div>
      <%= f.datetime_select :end_at, start_year: now.year, end_year: now.year + 1 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= show_image_if_attached(event) %>
    <%= f.file_field :image, class: 'form-control-file' %>
  </div>
  <% if event.has_image_to_show? %>
    <div class="checkbox">
      <label>
        <%= f.check_box :remove_image %>
        画像を削除する
      </label>
    </div>
  <% end %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-auto">
        <%= f.submit class: 'btn btn-primary btn-lg btn-block' %>
      </div>
      <div class="col-auto">
        <%= link_to '戻る', 'javascript:history.back()', class: 'btn btn-secondary btn-lg btn-block' %>
      </div>
    </div>
  </div>
<% end %>
